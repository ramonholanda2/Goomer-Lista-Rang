// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurant {
  restaurant_id Int       @id @default(autoincrement())
  name          String
  image         String
  address       String
  opening_hours String
  products      Product[]
}

model Product {
  product_id    Int         @id @default(autoincrement())
  restaurant_id Int
  name          String
  image         String
  price         Int
  category      String
  restaurant    Restaurant  @relation(fields: [restaurant_id], references: [restaurant_id])
  promotions    Promotion[]
}

model Promotion {
  promotion_id            Int     @id @default(autoincrement())
  description             String
  price_promotional       Decimal
  opening_hours_promotion String
  product                 Product @relation(fields: [productId], references: [product_id])
  productId               Int
}
