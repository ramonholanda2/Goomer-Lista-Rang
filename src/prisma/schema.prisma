// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurant {
  restaurant_id      Int                  @id @default(autoincrement())
  name               String               @unique
  image              String
  address            String
  opening_hours      String
  RestaurantOProduct RestaurantOProduct[]
}

model Product {
  product_id         Int                  @id @default(autoincrement())
  name               String               
  image              String
  price              Decimal
  category           String
  RestaurantOProduct RestaurantOProduct[]
  promotions         Promotion[]
}

model RestaurantOProduct {
  restaurant   Restaurant @relation(fields: [restaurantId], references: [restaurant_id])
  restaurantId Int
  product      Product    @relation(fields: [productId], references: [product_id])
  productId    Int

  @@id([restaurantId, productId])
}

model Promotion {
  promotion_id            Int     @id @default(autoincrement())
  description             String
  price_promotional       Decimal
  opening_hours_promotion String
  product                 Product @relation(fields: [productId], references: [product_id])
  productId               Int
}
